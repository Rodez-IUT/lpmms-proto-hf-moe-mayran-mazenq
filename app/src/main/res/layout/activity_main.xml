<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/circle_button_somme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:width="200dp"
        android:height="200dp"
        android:text="51,00 â‚¬"
        android:background="@drawable/bouton_rond"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circle_button_stat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/bouton_rond"
        android:padding="12dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262"
        app:srcCompat="@drawable/stat" />

    <ImageView
        android:id="@+id/circle_button_vendre"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/bouton_rond"
        android:onClick="vendreProduit"
        android:padding="12dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.841"
        app:srcCompat="@drawable/euro_white" />

    <ImageView
        android:id="@+id/circle_button_transaction"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/bouton_rond"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_button_stat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/transaction" />

</androidx.constraintlayout.widget.ConstraintLayout>